#!/bin/bash

# --- Detect System Type ---
if grep -qi "debian\|ubuntu" /etc/os-release; then
  echo "[BOOTSTRAP] Debian/Ubuntu erkannt – Headless-Setup wird ausgeführt."
  yadm alt -s CLASS.headless
  bash ~/setup/headless.sh
else
  echo "[BOOTSTRAP] Arch-basiertes System erkannt – GUI-Setup wird ausgeführt."
  yadm alt -s CLASS.gui
  bash ~/setup/gui.sh
fi
