#!/bin/bash

set -e

echo "🚀 YADM Bootstrap gestartet..."

# Abfrage: Desktop oder Headless
read -rp "Installierst du ein Desktop-System? (y/n): " use_desktop

if [[ "$use_desktop" == "y" || "$use_desktop" == "Y" ]]; then
  echo "🖥️ Starte Desktop-Setup..."
  bash "$HOME/setup/gui.sh"
else
  echo "🧠 Starte Headless-Setup..."
  bash "$HOME/setup/headless.sh"
fi

echo "✅ Bootstrap abgeschlossen. Viel Spaß mit deinem System!"
